name = OKC Design
description = Responsive theme based on foundation css framework
core = 7.x
engine = phptemplate
screenshot = screenshot.png

; regions
regions[header] = Header
regions[help] = Help
regions[highlighted] = Highlighted
regions[content] = Content
regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second
regions[footer] = Footer

; default enabled plugins
settings[okcdesign_plugins_enabled][] = check_requirements
settings[okcdesign_plugins_enabled][] = foundation_bootstrap
settings[okcdesign_plugins_enabled][] = foundation_breadcrumb
settings[okcdesign_plugins_enabled][] = foundation_topbar
settings[okcdesign_plugins_enabled][] = foundation_icon_fonts
settings[okcdesign_plugins_enabled][] = foundation_alert_box
settings[okcdesign_plugins_enabled][] = dynamic_sidebars

; theme plugins
okcdesign_plugins[foundation_bootstrap][title] = Core
okcdesign_plugins[foundation_bootstrap][description] = Plug foundation css framework into Drupal.
okcdesign_plugins[foundation_bootstrap][hooks][] = hook_html_head_alter
okcdesign_plugins[foundation_bootstrap][hooks][] = hook_css_alter

okcdesign_plugins[dynamic_sidebars][title] = Dynamic sidebars
okcdesign_plugins[dynamic_sidebars][description] = Adjust content width according to sidebars
okcdesign_plugins[dynamic_sidebars][hooks][] = hook_preprocess_page

okcdesign_plugins[foundation_alert_box][title] = Status messages
okcdesign_plugins[foundation_alert_box][description] = Status messages as foundation alert boxes
okcdesign_plugins[foundation_alert_box][hooks][] = hook_status_messages

okcdesign_plugins[foundation_breadcrumb][title] = Breadcrumb
okcdesign_plugins[foundation_breadcrumb][description] = Drupal breadcrumb as foundation breadcrumb
okcdesign_plugins[foundation_breadcrumb][hooks][] = hook_breadcrumb

okcdesign_plugins[foundation_topbar][title] = Top bar
okcdesign_plugins[foundation_topbar][description] = Main and secondary menu as foundation topbar
okcdesign_plugins[foundation_topbar][hooks][] = hook_theme
okcdesign_plugins[foundation_topbar][hooks][] = hook_preprocess_foundation_topbar

okcdesign_plugins[homepage_remove_title][title] = Remove homepage title
okcdesign_plugins[homepage_remove_title][description] = Set no title on homepage
okcdesign_plugins[homepage_remove_title][hooks][] = hook_preprocess_page

okcdesign_plugins[homepage_remove_default_content][title] = Remove homepage default content
okcdesign_plugins[homepage_remove_default_content][description] = Set no default content on homepage
okcdesign_plugins[homepage_remove_default_content][hooks][] = hook_preprocess_page

okcdesign_plugins[breadcrumb_remove][title] = Remove breadcrumb
okcdesign_plugins[breadcrumb_remove][hooks][] = hook_preprocess_page

okcdesign_plugins[animate_css][title] = Animate Css
okcdesign_plugins[animate_css][description] = Add animate css libary from Daniel Eden. Add class css to your markup to animate them !
okcdesign_plugins[animate_css][hooks][] = hook_html_head_alter

okcdesign_plugins[foundation_icon_fonts][title] = foundation_icon_fonts
okcdesign_plugins[foundation_icon_fonts][description] = Set icons using foundation special fonts
okcdesign_plugins[foundation_icon_fonts][hooks][] = hook_html_head_alter

okcdesign_plugins[check_requirements][title] = check_requirements
okcdesign_plugins[check_requirements][hooks][] = hook_preprocess_page

