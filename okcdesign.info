name = OKC Design
description = Responsive theme based on foundation css framework
core = 7.x
engine = phptemplate
screenshot = screenshot.png

; regions
regions[header] = Header
regions[help] = Help
regions[highlighted] = Highlighted
regions[content] = Content
regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second
regions[footer] = Footer

; default enabled plugins
settings[okcdesign_plugins_enabled][] = dynamic_sidebars
settings[okcdesign_plugins_enabled][] = drupal__foundation
settings[okcdesign_plugins_enabled][] = status_messages__alert_box
settings[okcdesign_plugins_enabled][] = breadcrumb__breadcrumb
settings[okcdesign_plugins_enabled][] = foundation_topbar

; theme plugins
okcdesign_plugins[drupal__foundation][title] = Core
okcdesign_plugins[drupal__foundation][description] = Plug foundation css framework into Drupal.
okcdesign_plugins[drupal__foundation][hooks][] = hook_html_head_alter
okcdesign_plugins[drupal__foundation][hooks][] = hook_css_alter

okcdesign_plugins[dynamic_sidebars][title] = Dynamic sidebars
okcdesign_plugins[dynamic_sidebars][description] = Chande sidebar and content grid witdh dynamically
okcdesign_plugins[dynamic_sidebars][hooks][] = hook_preprocess_page

okcdesign_plugins[status_messages__alert_box][title] = Status messages
okcdesign_plugins[status_messages__alert_box][description] = Status messages as foundation alert boxes
okcdesign_plugins[status_messages__alert_box][hooks][] = hook_status_messages

okcdesign_plugins[breadcrumb__breadcrumb][title] = Breadcrumb
okcdesign_plugins[breadcrumb__breadcrumb][description] = Drupal breadcrumb as foundation breadcrumb
okcdesign_plugins[breadcrumb__breadcrumb][hooks][] = hook_breadcrumb

okcdesign_plugins[foundation_topbar][title] = Top bar
okcdesign_plugins[foundation_topbar][description] = Main and secondary menu as foundation topbar
okcdesign_plugins[foundation_topbar][hooks][] = hook_theme
okcdesign_plugins[foundation_topbar][hooks][] = hook_preprocess_foundation_topbar

okcdesign_plugins[homepage_remove_title][title] = Remove homepage title
okcdesign_plugins[homepage_remove_title][description] = Set no title on homepage
okcdesign_plugins[homepage_remove_title][hooks][] = hook_preprocess_page

okcdesign_plugins[homepage_remove_default_content][title] = Remove homepage default content
okcdesign_plugins[homepage_remove_default_content][description] = Set no default content on homepage
okcdesign_plugins[homepage_remove_default_content][hooks][] = hook_preprocess_page

okcdesign_plugins[remove_breadcrumb][title] = remove_breadcrumb
okcdesign_plugins[remove_breadcrumb][hooks][] = hook_preprocess_page

